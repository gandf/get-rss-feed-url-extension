{
    "manifest_version": 3,
    "name": "Get RSS Feed URL for Slick RSS",
    "description": "Retreive RSS feeds URLs from WebSite to import in Slick RSS",
    "version": "1.0.0",
    "author": "@shevabam",
    "homepage_url": "https://github.com/gandf/get-rss-feed-url-extension",
    "permissions": [
        "scripting",
        "activeTab",
        "notifications",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "action": {
        "default_icon" : "img/icon_default.png",
        "default_popup": "popup.html",
        "default_title": "View RSS feeds"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "icons": {
        "128" : "img/icon_128.png"
    }
}